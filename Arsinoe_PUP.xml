	<variables>
		<var name="Oil">false</var>
		<var name="EVA">false</var>
		<var name="PetAcc">false</var>
		<var name="Regen">false</var>
		<var name="WepSwap">false</var>
	</variables>
	
	<inputcommands>
		<cmd input="/oil">
			<if advanced="$Oil=false">
				<setvar name="Oil" value="true" />
				<addtochat color="57">Oil+2</addtochat>
			</if>
			<else> 
				<setvar name="Oil" value="false" />
				<addtochat color="57">Oil+1</addtochat>
			</else> 
		</cmd>  
		<cmd input="/eva">
			<if advanced="$EVA=false">
				<setvar name="EVA" value="true" />
				<addtochat color="57">EVA On.</addtochat>
			</if>
			<else>
				<setvar name="EVA" value="false" />
				<addtochat color="57">EVA Off.</addtochat>
			</else>
		</cmd>   
		<cmd input="/petacc">
			<if advanced="$PetAcc=false">
				<setvar name="PetAcc" value="true" />
				<addtochat color="57">PetAcc: On.</addtochat>
			</if>
			<else> 
				<setvar name="PetAcc" value="false" />
				<addtochat color="57">PetAcc: Off.</addtochat>
			</else> 
		</cmd>
		<cmd input="/regen">
			<if advanced="$Regen=false">
				<setvar name="Regen" value="true" />
				<addtochat color="57">Regen: On.</addtochat>
			</if>
			<else> 
				<setvar name="Regen" value="false" />
				<addtochat color="57">Regen: Off.</addtochat>
			</else> 
		</cmd>
		<cmd input="/wep">
        <if advanced="$WepSwap=true">
            <setvar name="WepSwap" value="false" />
            <addtochat color="57">Weapon Swaps: Locked. </addtochat>
         </if>
        <else> 
            <setvar name="WepSwap" value="true" />
            <addtochat color="57">Weapon Swaps: Unlocked.</addtochat>
         </else> 
         </cmd>
	</inputcommands>
	
	<idlegear>
