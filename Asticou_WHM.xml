	<inputcommands>
		<cmd input="/clothcraft">
			<if advanced="$clothcraft=false">
				<setvar name="clothcraft" value="true" />
				<addtochat color="57">Clothcraft: On.</addtochat>
			</if>
			<else> 
				<setvar name="clothcraft" value="false" />
				<addtochat color="57">Clothcraft: Off.</addtochat>
			</else> 
		</cmd>
		<cmd input="/PLL">
			<if advanced="$Powerlevel=false">
				<setvar name="Powerlevel" value="true" />
				<addtochat color="57">PL Set: On.</addtochat>
			</if>
			<else> 
				<setvar name="Powerlevel" value="false" />
				<addtochat color="57">PL Set: Off.</addtochat>
			</else>
		</cmd>
		<cmd input="/dev">
			<if advanced="$devotion=false">
				<setvar name="devotion" value="true" />
				<addtochat color="57">Devotion: On.</addtochat>
			</if>
			<else> 
				<setvar name="devotion" value="false" />
				<addtochat color="57">Devotion: Off.</addtochat>
			</else> 
		</cmd>
		<cmd input="/choco">
			<if advanced="$chocodig=false">
				<setvar name="chocodig" value="true" />
				<addtochat color="57">Chocobo Digging: On.</addtochat>
			</if>
			<else> 
				<setvar name="chocodig" value="false" />
				<addtochat color="57">Chocobo Digging: Off.</addtochat>
			</else> 
		</cmd>
	</inputcommands>
	
	<idlegear>
		<if advanced="%p_tp=>=1">
			<equip lock="true">
				<main>%eq_main</main>
				<sub>%eq_sub</sub>
				<range>%eq_range</range>
				<ammo>%eq_ammo</ammo>
			</equip>
        </if>
        <if p_status="idle">
            <equip set="Idle" />
				<if e_weather="earth|earthx2">
					<equip>
						<feet>Desert Boots</feet>
					</equip>
				</if>
        </if>
		<if advanced="$Powerlevel=true"> 
            <equip set="Powerlevel" />
        </if>
		<if advanced="$devotion=true"> 
            <equip set="devotion" lock="true" />
        </if>
		<if p_status="engaged">
            <equip set="TP" />
				<if p_subjob="NIN">
					<equip lock="true">
						<main>Sea Rob. Cudgel</main>
						<sub>Seawolf Cudgel</sub>
					</equip>
				</if>
        </if>
		<if p_status="resting">
			<equip set="resting" />
		</if>
		<if advanced="$clothcraft=true"> 
            <equip set="clothcraft" lock="true" />
        </if>
		<if advanced="$chocodig=true"> 
            <equip set="chocodig" lock="true" />
        </if>
		<if eq_ring2="Emperor Band">
            <equip lock="true">
                <ring2>Emperor Band</ring2>
            </equip>
        </if>
		<if e_area="Ru'Lude Gardens|Upper Jeuno|Lower Jeuno|Port Jeuno|Aht Urhgan Whitegate|Al Zahbi|Nashmau|Mhaura|Selbina|Norg|Kazham|Rabao">
            <equip set="Town"  />
        </if>
        <if e_area="Port Bastok|Bastok Mines|Bastok Markets|Metalworks">
            <equip set="Town">
				<body>Republic Aketon</body>
			</equip>
        </if>
        <if e_area="Port San d'Oria|Northern San d'Oria|Southern San d'Oria|Chateau d'Oraguille">
            <equip set="Town"  />
        </if>
        <if e_area="Port Windurst|Windurst Woods|Windurst Walls|Windurst Waters|Heavens Tower">
            <equip set="Town"  />
        </if>
	</idlegear>
	
