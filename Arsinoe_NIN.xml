	<init>
        <command>/macro book 5</command>
        <command delay="1000">/macro set 1</command>
    </init>
	
	<variables>
	    <var name="PDT">false</var>
	    <var name="MDT">false</var>
		<var name="Kite">false</var>
	    <var name="EVA">false</var>
	    <var name="DPS">false</var>
		<var name="Cooking">false</var>
	</variables>
	
	<inputcommands>
	    <cmd input="/pdt">
			<if advanced="$PDT=false">
			<setvar name="PDT" value="true" />
			<setvar name="MDT" value="false" />
			<setvar name="EVA" value="false" />
			<setvar name="DPS" value="false" />
				<addtochat color="57">PDT: On</addtochat>
			</if>
			<else> 
			<setvar name="PDT" value="false" />
				<addtochat color="57">PDT: Off</addtochat>
			</else> 
		</cmd>
		<cmd input="/mdt">
			<if advanced="$MDT=false">
			<setvar name="MDT" value="true" />
			<setvar name="PDT" value="false" />
			<setvar name="EVA" value="false" />
			<setvar name="DPS" value="false" />
				<addtochat color="57">MDT: On</addtochat>
			</if>
			<else> 
			<setvar name="MDT" value="false" />
				<addtochat color="57">MDT: Off</addtochat>
			</else> 
		</cmd>
		<cmd input="/kite">
			<if advanced="$Kite=false">
			<setvar name="Kite" value="true" />
				<addtochat color="57">Kiting On.</addtochat>
			</if>
			<else>
			<setvar name="Kite" value="false" />
				<addtochat color="57">Kiting Off.</addtochat>
			</else>
		</cmd>
		<cmd input="/eva">
			<if advanced="$EVA=false">
			<setvar name="EVA" value="true" />
			<setvar name="MDT" value="false" />	   
			<setvar name="PDT" value="false" />
			<setvar name="DPS" value="false" />
				<addtochat color="57">EVA On.</addtochat>
			</if>
			<else>
			<setvar name="EVA" value="false" />
				<addtochat color="57">EVA Off.</addtochat>
			</else>
		</cmd> 
		<cmd input="/dps">
			<if advanced="$DPS=false">
			<setvar name="DPS" value="true" />
			<setvar name="MDT" value="false" />
			<setvar name="PDT" value="false" />
			<setvar name="EVA" value="false" />
				<addtochat color="57">DPS On.</addtochat>
			</if>
			<else> 
			<setvar name="DPS" value="false" />
				<addtochat color="57">DPS Off.</addtochat>
			</else> 
		</cmd>
		<cmd input="/cooking">
			<if advanced="$Cooking=false">
			<setvar name="Cooking" value="true" />
				<addtochat color="57">Cooking On.</addtochat>
			</if>
			<else> 
			<setvar name="Cooking" value="false" />
				<addtochat color="57">Cooking Off.</addtochat>
			</else> 
		</cmd>
	</inputcommands>
	
